<%= form_for @tokyos do |t| %>
    <%= f.label :氏名 %>
        <%= f.text_field :name,size: 40%>
    <br>
        <%= f.label :所属Unit %>
        <%= f.select :unit, 
        [["Unit1", "Unit1"], 
        ["Unit2", "Unit2"], 
        ["Unit3", "Unit3"]], include_blank: "選択して下さい" %>
    <br>
        <%= f.label :所属コース %>
        <%= f.select :course, 
        [["web", "web"], 
        ["iphone", "iphone"], 
        ["game", "game"], 
        ["python", "python"], 
        ["AI", "AI"], 
        ["webEX", "webEX"], 
        ["UIUX", "UIUX"], 
        ["VE", "VE"]], include_blank: "選択して下さい" %>
    <br>
        <%= f.label :担当メンター %>
        <%= f.text_field :mentor,size: 40%>
    <%= f.submit "編集する" %>
<% end %>

<%= link_to "一覧に戻る", tokyo_path %>